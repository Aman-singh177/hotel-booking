<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>
        <div class="card col-6 offset-2 listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image" />
            <div class="card-body">
                <p class="card-text">Owned by : <i><%= listing.owner.username %></i> </p>
                <p class="card-text"> <%= listing.description %> </p>
                <p class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> </p>
                <p class="card-text"> <%= listing.location %> </p>
                <p class="card-text"> <%= listing.country %> </p>
            </div>
        </div>
        <br> 
        <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
        <div class="row mt-4">
            <div class="col-6 offset-2 d-flex justify-content-start gap-3">
                <!-- Edit Button -->
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
        
                <!-- Delete Button -->
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div> 
        <% } %>

        <div class="col-8 offset-3 ">
            <hr>
            <% if(currUser){ %>
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label> 
                    <!-- review object banai jiske andar rating ki value ko input le rahe hai -->
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <!-- yeh ho gai client side validation postman se server side se bhej skte hai galt review -->
                    <label for="comment" class="form-label">Comments </label>
                    <textarea name="review[comment]" required id="comment" class="form-control" cols="30" rows="10"></textarea>
                    <div class="invalid-feedback">Please write something</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <% } %>
            <h4>All Reviews</h4> 
            <ul>
            <% for(let review of listing.reviews) { %>
                <li><%= review.comment %>, <%= review.rating %> starts </li>
            <% } %>
            </ul>
            <div class="row">
                <% for(let review of listing.reviews) { %>
                <div class="card col-6 mb-3    ">
                    <div class="card-body">
                        <h4 class="card-title"><%= review.author.username %></h4>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating %></p>
                        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-dark btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        </div> 
</div>
<br>